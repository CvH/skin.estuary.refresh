                <control type="image">
				<left>1750</left>
				<top>760</top>
				<include>Visible_Left</include>
				<width>150</width>
				<height>150</height>
				<fadetime>400</fadetime>
				<aspectratio aligny="bottom">keep</aspectratio>
				<texture fallback="DefaultAlbumCover.png">$INFO[MusicPlayer.Cover]</texture>
			</control>
            <control type="label">
						<top>910</top>
                        <left>300</left>
						<width>1600</width>
						<height>40</height>
						<label>$INFO[MusicPlayer.offset(1).tracknumber,,. ][COLOR=white]$INFO[MusicPlayer.offset(1).Title][/COLOR]</label>
						<font>font37</font>
                        <align>right</align>
						<shadowcolor>black</shadowcolor>
						<textcolor>button_focus</textcolor>
						<scroll>true</scroll>
			</control>
        		
				<control type="group">
					<left>300</left>
					<top>540</top>
					<control type="label">
						<top>0</top>
						<width>1600</width>
						<height>40</height>
						<label>$INFO[MusicPlayer.Artist]</label>
						<font>font_MainMenu</font>
						<shadowcolor>black</shadowcolor>
						<scroll>true</scroll>
                        <align>right</align>
					</control>
					<control type="label">
						<top>127</top>
						<width>1600</width>
						<height>40</height>
						<label>$INFO[MusicPlayer.Album] - [B]$INFO[MusicPlayer.Year][/B]</label>
						<font>font37</font>
						<shadowcolor>black</shadowcolor>
                        <align>right</align>
						<scroll>true</scroll>
					</control>
					<control type="label">
						<top>80</top>
						<width>1600</width>
						<height>40</height>
						<label>$INFO[MusicPlayer.TrackNumber,,. ][COLOR=white]$INFO[Player.Title][/COLOR]</label>
						<font>font37</font>
                        <align>right</align>
						<shadowcolor>black</shadowcolor>
						<textcolor>button_focus</textcolor>
						<scroll>true</scroll>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>
